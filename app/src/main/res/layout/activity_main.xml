<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.alextavella.fiap_android_alarm_service.MainActivity">

    <EditText
        android:id="@+id/etTimer"
        style="@style/expanded"
        android:hint="@string/st_seconds"
        android:inputType="number" />

    <Button
        android:id="@+id/btInit"
        style="@style/expanded"
        android:text="@string/st_init" />

    <LinearLayout
        style="@style/expanded"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btInitService"
            style="@style/width_half"
            android:text="@string/st_start" />

        <Button
            android:id="@+id/btStopService"
            style="@style/width_half"
            android:text="@string/st_stop" />
    </LinearLayout>

</LinearLayout>
